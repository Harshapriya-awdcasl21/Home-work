import java.util.*;

 class arrcontinuesum

 {

   public static void main(String args[])

   { 

     Scanner k= new Scanner(System.in);

     System.out.println("Enter size of array");

     int n=k.nextInt();

     int a[]= new int[n];     

     System.out.println("Enter array elements");

     for(int i=0;i<n;i++)

     a[i]=k.nextInt();

     int s=0;

     for(int i=0;i<n;i++)

     {

       for(int j=0;j<=i;j++)

       s=s+a[j];

       

     }

     System.out.println("The running sum is "+s);

   }

 }
 
 Output:
 Enter size of array

4

Enter array elements

3

4

5

6

The running sum is 40

Process finished.
