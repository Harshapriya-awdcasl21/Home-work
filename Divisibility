import java.util.Scanner;

 // Compiler version JDK 11.0.2

 class Divisibility

 {

   public static void main(String args[])

   { 

     Scanner n=new Scanner(System.in);

     int k=n.nextInt();

     if((k%4)==0)

    System.out.println(++k);

    else

      System.out.println(--k);

   }

 }

